{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "‚ö° Auto Debug Full Stack",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/api",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "üöÄ Auto Start Full Stack",
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "üî• Debug Frontend (Chrome + Sourcemaps)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/apps/ui/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/apps/ui/src/*",
        "/@/*": "${workspaceFolder}/apps/ui/src/*",
        "/src/*": "${workspaceFolder}/apps/ui/src/*",
        "/*": "*",
        "/./~/*": "${workspaceFolder}/node_modules/*"
      },
    },
    {
      "name": "üî• Debug Backend (Nitro with Inspector)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/api",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--inspect=9229"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/api/server/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "üöÄ Launch UI (React + Vite)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/ui",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "serverReadyAction": {
        "pattern": "Local:.*http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "üîß Launch API (Nitro)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/api",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/api/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "üêõ Attach to Chrome (Frontend Debug)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/apps/ui/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/@/*": "${workspaceFolder}/apps/ui/src/*"
      }
    },
    {
      "name": "üåê Launch Chrome (Frontend Debug)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/ui/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/@/*": "${workspaceFolder}/apps/ui/src/*"
      }
    },
    {
      "name": "üîç Debug API with Nitro",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/api",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--inspect=9230"
      },
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/api/**",
        "!**/node_modules/**"
      ],
      "outputCapture": "console"
    }
  ],
  "compounds": [
    {
      "name": "üöÄ Launch Full Stack (UI + API)",
      "configurations": [
        "üöÄ Launch UI (React + Vite)",
        "üîß Launch API (Nitro)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    },
    {
      "name": "üî• Debug Full Stack (Manual Start)",
      "configurations": [
        "üî• Debug Frontend (Chrome + Sourcemaps)",
        "üî• Debug Backend (Nitro with Inspector)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 3
      }
    },
    {
      "name": "üêõ Debug Full Stack (Chrome + API)",
      "configurations": [
        "üåê Launch Chrome (Frontend Debug)",
        "üîç Debug API with Nitro"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 2
      }
    }
  ]
}
